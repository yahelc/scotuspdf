---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SCOTUS PDF Reader">
  <main class="home">
    <header class="hero">
      <h1>SCOTUS PDF Reader</h1>
      <p class="tagline">Turn SCOTUS PDFs into easy reading on any device.</p>
      <ul class="features">
        <li>Chapter Navigation</li>
        <li>Inlined Footnotes</li>
        <li>Flexible Reading Modes</li>
      </ul>
      <a class="demo-link" href="/read/23/23-939_e2pg.pdf">Try it: <em>Trump v. United States</em> â†’</a>
    </header>

    <form class="search-form" id="search-form">
      <input
        type="url"
        id="url-input"
        placeholder="Paste a supremecourt.gov PDF URL..."
        autocomplete="off"
        required
      />
      <button type="submit">Read</button>
    </form>

    <section class="recent">
      <h2>Recent Opinions</h2>
      <div class="opinion-list" id="opinion-list">
        <p class="loading">Loading recent opinions...</p>
      </div>
    </section>
  </main>
</Layout>

<script>
  const form = document.getElementById('search-form') as HTMLFormElement;
  const input = document.getElementById('url-input') as HTMLInputElement;

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const url = input.value.trim();
    if (!url) return;

    try {
      const parsed = new URL(url);
      if (!['supremecourt.gov', 'www.supremecourt.gov'].includes(parsed.hostname)) {
        alert('Please enter a URL from supremecourt.gov');
        return;
      }
      // Extract term and filename from path
      // e.g., /opinions/24pdf/23-1345_opinion.pdf
      const pathMatch = parsed.pathname.match(/\/(\d{2})pdf\/([\w\-]+\.pdf)/i);
      if (pathMatch) {
        window.location.href = `/read/${pathMatch[1]}/${pathMatch[2]}`;
      } else {
        // Fallback: encode the full URL
        window.location.href = `/read?url=${encodeURIComponent(url)}`;
      }
    } catch {
      alert('Please enter a valid URL');
    }
  });

  // Load recent opinions + popular counts
  async function loadRecent() {
    const list = document.getElementById('opinion-list')!;
    try {
      const [recentResp, popularResp] = await Promise.all([
        fetch('/api/recent'),
        fetch('/api/popular').catch(() => null),
      ]);

      if (!recentResp.ok) throw new Error('Failed to load');
      const opinions = await recentResp.json();

      let popular: Record<string, number> = {};
      if (popularResp?.ok) {
        try { popular = await popularResp.json(); } catch {}
      }

      if (!opinions.length) {
        const empty = document.createElement('p');
        empty.className = 'empty';
        empty.textContent = 'No recent opinions found';
        list.replaceChildren(empty);
        return;
      }

      const fragment = document.createDocumentFragment();
      for (const op of opinions as Array<{ term: string; filename: string; title: string; docketNumber: string; date: string }>) {
        const key = `${op.term}/${op.filename}`;
        const views = popular[key];

        const card = document.createElement('a');
        card.className = 'opinion-card';
        card.href = `/read/${op.term}/${op.filename}`;

        const title = document.createElement('span');
        title.className = 'opinion-title';
        title.textContent = op.title;
        card.appendChild(title);

        const meta = document.createElement('span');
        meta.className = 'opinion-meta';
        const parts = [op.docketNumber, op.date].filter(Boolean);
        meta.textContent = parts.join(' \u00b7 ');

        if (views) {
          const badge = document.createElement('span');
          badge.className = 'opinion-views';
          badge.textContent = `${views} view${views === 1 ? '' : 's'}`;
          meta.appendChild(document.createTextNode(' '));
          meta.appendChild(badge);
        }

        card.appendChild(meta);
        fragment.appendChild(card);
      }
      list.replaceChildren(fragment);
    } catch {
      const empty = document.createElement('p');
      empty.className = 'empty';
      empty.textContent = 'Could not load recent opinions';
      list.replaceChildren(empty);
    }
  }

  loadRecent();
</script>

<style>
  .home {
    max-width: 640px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-family: var(--font-body);
    font-size: 2rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }

  .tagline {
    color: var(--text-secondary);
    font-size: clamp(0.7rem, 4vw, 0.95rem);
    line-height: 1.5;
    max-width: 440px;
    margin: 0 auto 1rem;
    padding: 0 0.5rem;
    white-space: nowrap;
  }

  .features {
    list-style: none;
    padding: 0 0.5rem;
    margin: 0 auto 1.25rem;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 0;
    font-family: var(--font-ui);
    font-size: clamp(0.55rem, 3.2vw, 0.8rem);
    color: var(--text-secondary);
    white-space: nowrap;
  }

  .features li + li::before {
    content: '|';
    margin: 0 0.5rem;
    opacity: 0.4;
  }

  .demo-link {
    display: inline-block;
    font-family: var(--font-ui);
    font-size: 0.85rem;
    color: var(--accent);
    text-decoration: none;
    margin-bottom: 0.5rem;
  }

  .demo-link:hover {
    text-decoration: underline;
  }

  .search-form {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 3rem;
  }

  .search-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 2px solid var(--border);
    border-radius: 8px;
    background: var(--bg-surface);
    color: var(--text);
    font-family: var(--font-ui);
  }

  .search-form input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .search-form button {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    background: var(--accent);
    color: #fff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-family: var(--font-ui);
    font-weight: 600;
  }

  .search-form button:hover {
    background: var(--accent-light);
  }

  .recent h2 {
    font-family: var(--font-body);
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--text-secondary);
  }

  .opinion-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .loading, .empty {
    color: var(--text-secondary);
    font-style: italic;
  }

  :global(.opinion-card) {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    color: var(--text);
    transition: border-color 0.15s;
  }

  :global(.opinion-card:hover) {
    border-color: var(--accent);
    text-decoration: none;
  }

  :global(.opinion-title) {
    font-family: var(--font-body);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  :global(.opinion-meta) {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  :global(.opinion-views) {
    display: inline-block;
    background: var(--accent);
    color: #fff;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.1rem 0.4rem;
    border-radius: 10px;
    margin-left: 0.5rem;
  }
</style>
